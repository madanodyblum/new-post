{
  "compilerOptions": {
    "module": "commonjs",
    "typeRoots": [
      "./node_modules/@types",
      "./typing/typing.d.ts",
      "./src/interfaces/*",
      "./node_modules/@types/mocha/index.d.ts",
      "./node_modules/@types/node/index.d.ts",
      "./node_modules/@types/mongoose/index.d.ts",
      "./node_modules/@types/mongodb/index.d.ts",
      "./node_modules/@types/express/index.d.ts",
      "./node_modules/@types/dotenv/index.d.ts",
      "./node_modules/@types/express-session/index.d.ts"
    ],
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2016",
    "sourceMap": true,
    "types": ["node"],
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "Interfaces/*": ["interfaces/*"],
      "Graphql/*": ["graphql/*"],
      "Model/*": ["model/*"],
      "Services/*": ["services/*"],
      "Controllers/*": ["controllers/*"],
      "Logger/*": ["logger/*"]
    },
    "incremental": true,
    "esModuleInterop": true
  },
  "lib": ["es2015"],
  "files": ["./typing/express.d.ts", "./typing/typing.d.ts"],
  "include": ["/typing"],
  "exclude": ["node_modules", "dist"]
}
